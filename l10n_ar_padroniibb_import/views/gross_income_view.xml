<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="gross_income_view_inherit" model="ir.ui.view">
        <field name="name">cm05.view.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='accounting_disabled']" position="after">
                <page string="IIBB">
                    <field name="gross_income" nolabel="1" >
                        <tree editable="bottom" create="true" delete="false">
                            <field name="province_id" domain="[('country_id', '=', 'Argentina')]" readonly="0"/>
                            <field name="type_taxpayer" readonly="0" required="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
