<odoo>
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_vat.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='eu_service']" position="after">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="patterns_keep" string="Patrones para mantener"/>
                        <div class="content-group">
                            <div class="row mt16 ml4">
                                <field name="patterns_keep"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

