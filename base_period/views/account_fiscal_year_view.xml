<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>

        <!-- Fiscal Year -->
        <record id="account_fiscal_year_view_form" model="ir.ui.view">
            <field name="name">account.fiscal.year.form</field>
            <field name="model">account.fiscal.year</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Fiscal year">
                    <header>
                        <button name="button_create_period"
                            states="draft"
                            string="Create Monthly Periods"
                            type="object"
                            class="oe_highlight"/>
                        <button name="button_create_period3"
                            states="draft"
                            string="Create 3 Months Periods"
                            type="object"
                            class="oe_highlight"/>
                        <field name="state" widget="statusbar" nolabel="1" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="company_id"
                                    groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                        </group>
                        <group string="Periods" name="period">
                            <field name="period_ids" nolabel="1">
                                <form string="Period">
                                    <group col="4">
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="date_from"/>
                                        <field name="date_to"/>
                                        <field name="special"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="account_fiscal_year_view_tree" model="ir.ui.view">
            <field name="name">account.fiscal.year.tree</field>
            <field name="model">account.fiscal.year</field>
            <field name="inherit_id" ref="account.action_account_fiscal_year_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="attributes">
                    <attribute name="colors">blue:state == 'draft';gray:state == 'done'</attribute>
                </xpath>
                <field name="company_id" position="after">
                    <field name="state"/>
                </field>
            </field>
        </record>

        <record id="account_fiscal_year_view_search" model="ir.ui.view">
            <field name="name">account.fiscalyear.search</field>
            <field name="model">account.fiscal.year</field>
            <field name="inherit_id" ref="account.action_account_fiscal_year_search"/>
            <field name="arch" type="xml">
                <field name="name" position="attributes">
                    <attribute name="filter_domain">[
                            '|', ('name','ilike',self),
                            ('code','ilike',self)
                        ]
                    </attribute>
                </field>
                <field name="name" position="after">
                    <filter string="Open" name="filter_open"
                        domain="[('state','=','draft')]" icon="terp-camera_test"/>
                    <filter string="Closed" name="filter_closed"
                        domain="[('state','=','done')]" icon="terp-dialog-close"/>
                    <field name="state"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="filter_status"
                            context="{'group_by': 'state'}"
                            icon="terp-stock_effects-object-colorize"/>
                    </group>
                </field>
            </field>
        </record>

        <record id="account.action_account_fiscal_year_form" model="ir.ui.view">
            <field name="active">False</field>
        </record>

        <record id="account_fiscal_year_action" model="ir.actions.act_window">
            <field name="name">Fiscal Years</field>
            <field name="res_model">account.fiscal.year</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to start a new fiscal year.
              </p><p>
                Define your company's financial year according to your needs. A
                financial year is a period at the end of which a company's
                accounts are made up (usually 12 months). The financial year is
                usually referred to by the date in which it ends. For example,
                if a company's financial year ends November 30, 2011, then
                everything between December 1, 2010 and November 30, 2011
                would be referred to as FY 2011.
              </p>
            </field>
        </record>

    </data>
</odoo>

