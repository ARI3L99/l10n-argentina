<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>

        <record id="view_payment_order_receipt_filter" model="ir.ui.view">
            <field name="name">account.payment.order.customer.pay.select</field>
            <field name="model">account.payment.order</field>
            <field name="arch" type="xml">
                <search string="Search Vouchers">
                    <field name="number" string="Voucher"/>
                    <field name="date"/>
                    <filter icon="terp-document-new" string="Draft" domain="[('state','=','draft')]" help="Draft Vouchers"/>
                    <filter icon="terp-camera_test" string="Posted" domain="[('state','=','posted')]" help="Posted Vouchers"/>
                    <field name="partner_id" string="Customer" filter_domain="[('partner_id','child_of',self)]"/>
                    <field name="journal_id" widget="selection" context="{'journal_id': self, 'set_visible':False}" domain="[('type','in',('bank','cash'))]"/> <!-- Keep widget=selection on this field to pass numeric `self` value, which is not the case for regular m2o widgets! -->
                    <!-- TODO: Este campo debe aÃ±adirlo base_period -->
                    <!-- <field name="period_id"/> -->
                    <group expand="0" string="Group By">
                        <filter string="Customer" icon="terp-personal" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="Journal" icon="terp-folder-orange" domain="[]" context="{'group_by':'journal_id'}"/>
                        <filter string="Period" icon="terp-go-month" domain="[]" context="{'group_by':'period_id','visible':True}"/>
                        <filter string="Status" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record model="ir.ui.view" id="view_payment_order_receipt_form">
            <field name="name">account.payment.order.receipt.form</field>
            <field name="model">account.payment.order</field>
            <field name="arch" type="xml">
                <form string="Receipt">
                    <header invisible="context.get('line_type', False)">
                        <button name="proforma_voucher" string="Validate" class="oe_highlight"/>
                        <button name="cancel_voucher" string="Cancel Receipt"/>
                        <button name="cancel_voucher" string="Unreconcile" type="object" confirm="Are you sure to unreconcile and cancel this record ?"/>
                        <button name="action_cancel_draft" type="object" string="Set to Draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,posted" statusbar_colors='{"proforma":"blue"}'/>
                    </header>
                    <sheet>
                        <h1 attrs="{'invisible': [('number','=',False)]}"><field name="number" attrs="{'readonly': [('state', 'not in', ('draft'))]}"/></h1>
                        <group invisible="context.get('line_type', False)">
                            <group>
                                <field name="partner_id"
                                    domain="[('customer','=',True)]"
                                    required="1"
                                    string="Customer"
                                    context="{'search_default_customer': 1}"
                                    attrs="{'readonly': [('state', 'not in', ('draft'))]}"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="journal_id"
                                    domain="[('type','=','receipt')]"
                                    widget="selection"
                                    string="Journal"
                                    attrs="{'readonly': [('state', 'not in', ('draft'))]}"/>
                                <field name="amount" class="oe_inline"
                                    string="Paid Amount"
                                    widget="monetary" options="{'currency_field': 'currency_id'}"
                                    attrs="{'readonly': [('state', 'not in', ('draft'))]}"/>
                            </group>
                            <group>
                                <field name="date" attrs="{'readonly': [('state', 'not in', ('draft'))]}"/>
                                <field name="reference" string="Payment Ref" placeholder="e.g. 003/10" attrs="{'readonly': [('state', 'not in', ('draft'))]}"/>
                                <field name="name" colspan="2" placeholder="e.g. Invoice SAJ/0042" attrs="{'readonly': [('state', 'not in', ('draft'))]}"/>
                                <field name="company_id" widget="selection" groups="base.group_multi_company" attrs="{'readonly': [('state', 'not in', ('draft'))]}"/>
                                <field name="account_id"
                                    widget="selection"
                                    invisible="True"
                                    attrs="{'readonly': [('state', 'not in', ('draft'))]}"/>
                                <field name="pre_line" invisible="1"/>
                                <field name="type" invisible="1" attrs="{'readonly': [('state', 'not in', ('draft'))]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Payment Information" groups="base.group_user">
                                <label for="payment_mode_line_ids"/>
                                <field name="payment_mode_line_ids" attrs="{'readonly': [('state', 'not in', ('draft'))]}">
                                    <tree string="Payment Methods" editable="bottom" colors="gray:amount==0">
                                        <field name="payment_mode_id" invisible="0" />
                                        <field name="name" invisible="1"/>
                                        <field name="currency_id" readonly="1"/>
                                        <field name="date"/>
                                        <field name="payment_order_id" invisible="1"/>
                                        <field name="amount" sum="Total"/>
                                    </tree>
                                 </field>
                                <label for="line_cr_ids" invisible="context.get('line_type', False)" string="Invoices and outstanding transactions"/>
                                <field name="line_cr_ids" context="{'journal_id':journal_id, 'type':type, 'partner_id':partner_id}" attrs="{'readonly': [('state', 'not in', ('draft'))]}">
                                    <tree string="Invoices and outstanding transactions" editable="bottom" colors="gray:amount==0">
                                        <field name="state" invisible="1"/>
                                        <field name="invoice_id"/>
                                        <field name="ref"/>
                                        <field name="move_line_id" context="{'journal_id':parent.journal_id, 'partner_id':parent.partner_id}"
                                            on_change="onchange_move_line_id(move_line_id)"
                                            domain="[('account_id.type','in',('receivable','payable')), ('reconcile_id','=', False), ('partner_id','=',parent.partner_id)]"
                                            attrs="{'required': [('state', 'in', [False, 'draft'])]}"
                                            groups="account.group_account_user"/>
                                        <field name="account_id"  groups="base.group_no_one" domain="[('type','=','receivable')]"/>
                                        <field name="date_original" readonly="1"/>
                                        <field name="date_due" readonly="1"/>
                                        <field name="amount_original" readonly="1"/>
                                        <field name="amount_unreconciled" readonly="1" groups="account.group_account_user" sum="Total Unreconciled"/>
                                        <field name="reconcile" on_change="onchange_reconcile(reconcile, amount, amount_unreconciled, context)" groups="account.group_account_user"/>
                                        <field name="amount" sum="Total Allocation" on_change="onchange_amount(amount, amount_unreconciled, context)" string="Allocation"/>
                                    </tree>
                                </field>
                                <label for="line_dr_ids" attrs="{'invisible': [('pre_line','=',False)]}" string="Credits"/>
                                <field name="line_dr_ids" attrs="{'invisible': [('pre_line','=',False)], 'readonly': [('state', 'not in', ('draft'))]}" context="{'journal_id':journal_id, 'partner_id':partner_id}" on_change="onchange_line_ids(line_dr_ids, line_cr_ids, amount, currency_id, type, context)">
                                    <tree string="Credits" editable="bottom" colors="gray:amount==0">
                                        <field name="state" invisible="1"/>
                                        <field name="invoice_id"/>
                                        <field name="ref"/>
                                        <field name="move_line_id" context="{'journal_id':parent.journal_id, 'partner_id':parent.partner_id}"
                                            on_change="onchange_move_line_id(move_line_id)"
                                            domain="[('account_id.type','in',('receivable','payable')), ('reconcile_id','=', False), ('partner_id','=',parent.partner_id)]"
                                            attrs="{'required': [('state', 'in', [False, 'draft'])]}"/>
                                        <field name="account_id"  groups="base.group_no_one" domain="[('type','=','receivable')]"/>
                                        <field name="date_original" readonly="1"/>
                                        <field name="date_due" readonly="1"/>
                                        <field name="amount_original" readonly="1"/>
                                        <field name="amount_unreconciled" readonly="1" sum="Total Unreconciled"/>
                                        <field name="reconcile" on_change="onchange_reconcile(reconcile, amount, amount_unreconciled, context)"/>
                                        <field name="amount" sum="Total Allocation" on_change="onchange_amount(amount, amount_unreconciled, context)" string="Allocation"/>
                                    </tree>
                                </field>
                                <group col="3">
                                    <group>
                                        <field name="narration" colspan="2" nolabel="1" attrs="{'readonly': [('state', 'not in', ('draft'))]}"/>
                                    </group>
                                    <group col="4" attrs="{'invisible':[('is_multi_currency','=',False)]}">
                                        <field name="is_multi_currency" invisible="1"/>
                                        <label for="payment_rate" colspan="1"/>
                                        <div>
                                            <field name="payment_rate" required="1" class="oe_inline" attrs="{'readonly': [('state', 'not in', ('draft'))]}"/>
                                            <field name="payment_rate_currency_id" class="oe_inline" attrs="{'readonly': [('state', 'not in', ('draft'))]}" groups="base.group_multi_currency"/>
                                        </div>
                                        <!-- <field name="currency_help_label" colspan="2" nolabel="1" class="oe_grey"/> -->
                                        <field name="paid_amount_in_company_currency" colspan="4" invisible="1"/>
                                    </group>
                                    <group>
                                        <field name="writeoff_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        <field name="payment_option"
                                            required="1"
                                            attrs="{'invisible':[('writeoff_amount','=',0)], 'readonly': [('state', 'not in', ('draft'))]}"/>
                                        <field name="writeoff_acc_id"
                                               attrs="{'invisible':['|', ('payment_option','!=','with_writeoff'), ('writeoff_amount','=',0)], 'required':[('payment_option','=','with_writeoff')], 'readonly': [('state', 'not in', ('draft'))]}"
                                               domain="[('type','=','other')]"/>
                                        <field name="comment"
                                               attrs="{'invisible':['|', ('payment_option','!=','with_writeoff'), ('writeoff_amount','=',0)], 'readonly': [('state', 'not in', ('draft'))]}"/>
                                        <field name="analytic_id"
                                               groups="analytic.group_analytic_accounting"
                                               attrs="{'invisible':['|', ('payment_option','!=','with_writeoff'), ('writeoff_amount','=',0)], 'readonly': [('state', 'not in', ('draft'))]}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Journal Items" attrs="{'invisible': [('state','!=','posted')]}">
                                <group col="4">
                                    <!-- TODO: Este campo era un related a 'to_check' en account.move pero ya no existe mas -->
                                    <!-- <field name="audit"/> -->
                                </group>
                                <field name="move_line_ids" readonly="1">
                                    <tree string="Journal Items">
                                        <field name="move_id"/>
                                        <field name="ref"/>
                                        <field name="date"/>
                                        <field name="statement_id"/>
                                        <field name="partner_id"/>
                                        <field name="account_id"/>
                                        <field name="name"/>
                                        <field name="debit"/>
                                        <field name="credit"/>
                                        <!-- TODO: No existe mas el campo state -->
                                        <!-- <field name="state"/> -->
                                        <!-- TODO: No existe el modelo 'account.move.reconcile' -->
                                        <!-- <field name="reconcile_id"/> -->
                                        <field name="amount_currency"/>
                                        <field name="currency_id" groups="base.group_multi_currency"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <!-- TODO: Error: No existe el campo message_follower_ids -->
                    <!-- <div class="oe_chatter" invisible="context.get('line_type', False)">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div> -->
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_payment_order_receipt">
            <field name="name">Customer Payments</field>
            <field name="res_model">account.payment.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('journal_id.type', '=', 'receipt'), ('type','=','receipt')]</field>
            <field name="context">{'type':'receipt'}</field>
            <field name="view_id" eval="False"/>
            <field name="target">current</field>
            <field name="search_view_id" ref="view_payment_order_receipt_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to register a new payment. 
              </p><p>
                Enter the customer and the payment method and then, either
                create manually a payment record or Odoo will propose to you
                automatically the reconciliation of this payment with the open
                invoices or sales receipts.
              </p>
            </field>
        </record>

        <record id="action_payment_order_receipt_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="action_payment_order_receipt"/>
        </record>
        <record id="action_payment_order_receipt_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_payment_order_receipt_form"/>
            <field name="act_window_id" ref="action_payment_order_receipt"/>
        </record>


        <menuitem id="menu_action_sale_receipt"                                                                                                   
               action="action_payment_order_receipt"
               parent="account.menu_finance_receivables_documents"
               sequence="10"/>
    </data>
</odoo>

